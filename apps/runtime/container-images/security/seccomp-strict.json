{
  "defaultAction": "SCMP_ACT_ERRNO",
  "defaultErrnoRet": 1,
  "archMap": [
    {
      "architecture": "SCMP_ARCH_X86_64",
      "subArchitectures": ["SCMP_ARCH_X86", "SCMP_ARCH_X32"]
    },
    {
      "architecture": "SCMP_ARCH_AARCH64",
      "subArchitectures": ["SCMP_ARCH_ARM"]
    }
  ],
  "syscalls": [
    {
      "comment": "Essential system calls for script execution",
      "names": [
        "access",
        "arch_prctl",
        "brk",
        "close",
        "connect",
        "dup",
        "dup2",
        "exit",
        "exit_group",
        "fcntl",
        "fstat",
        "futex",
        "getcwd",
        "getdents64",
        "getegid",
        "geteuid",
        "getgid",
        "getpid",
        "getppid",
        "getrandom",
        "getuid",
        "ioctl",
        "lseek",
        "mmap",
        "mprotect",
        "munmap",
        "nanosleep",
        "newfstatat",
        "openat",
        "poll",
        "pread64",
        "read",
        "readlink",
        "recvfrom",
        "recvmsg",
        "rt_sigaction",
        "rt_sigprocmask",
        "rt_sigreturn",
        "sendto",
        "set_robust_list",
        "set_tid_address",
        "sigaltstack",
        "socket",
        "stat",
        "uname",
        "write"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Network calls for HTTP requests",
      "names": ["bind", "getsockname", "getsockopt", "setsockopt"],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Time-related calls",
      "names": ["clock_getres", "clock_gettime", "gettimeofday"],
      "action": "SCMP_ACT_ALLOW"
    }
  ]
}
