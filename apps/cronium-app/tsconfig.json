{
  "extends": "@cronium/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@components/*": ["./src/components/*"],
      "@server/*": ["./src/server/*"],
      "@lib/*": ["./src/lib/*"],
      "@scripts/*": ["./src/scripts/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "_scratch/**",
    ".next",
    "_backups",
    "scripts/*",
    "**/__tests__/*",
    "**/_backup/**",
    "**/*.backup.ts",
    "**/*.backup.tsx",
    "**/deprecated/*"
  ]
}
