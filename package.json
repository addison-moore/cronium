{
  "name": "cronium",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@cronium/app",
    "dev:info": "turbo dev --filter=@cronium/info",
    "dev:all": "turbo dev --parallel",
    "build": "turbo build",
    "build:app": "turbo build --filter=@cronium/app",
    "build:info": "turbo build --filter=@cronium/info",
    "build:go": "turbo build:go",
    "test": "turbo test",
    "test:app": "turbo test --filter=@cronium/app",
    "test:go": "turbo test:go",
    "lint": "turbo lint",
    "lint:go": "turbo lint:go",
    "lint:ts": "turbo lint:ts",
    "lint:log": "turbo lint:log",
    "tsc:log": "turbo tsc:log",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "db:push": "turbo db:push --filter=@cronium/app",
    "db:studio": "turbo db:studio --filter=@cronium/app",
    "db:generate": "turbo db:generate --filter=@cronium/app",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "docker:up": "./infra/scripts/dev-docker-local-app.sh",
    "docker:down": "docker compose -f infra/docker/docker-compose.dev.local-app.yml down",
    "docker:build": "docker compose -f infra/docker/docker-compose.dev.local-app.yml build",
    "docker:logs": "docker compose -f infra/docker/docker-compose.dev.local-app.yml logs -f",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0-or-later",
  "description": "",
  "devDependencies": {
    "@cronium/eslint-config": "workspace:*",
    "@cronium/tailwind-config": "workspace:*",
    "@cronium/typescript-config": "workspace:*",
    "turbo": "^2.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.15.0"
}
