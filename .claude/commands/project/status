Get comprehensive project status including linting, tests, and build

!echo "📊 Cronium Project Status"
!echo "========================"
!echo ""

# Check git status
!echo "🔀 Git Status:"
!git status --short | head -10
!if [ $(git status --short | wc -l) -gt 10 ]; then
    echo "... and $(($(git status --short | wc -l) - 10)) more files"
fi
!echo ""

# Check linting status
!echo "🔍 Linting Status:"
!if [ -f lint.log ]; then
    echo "Last lint run: $(stat -f '%Sm' lint.log 2>/dev/null || stat -c '%y' lint.log 2>/dev/null | cut -d' ' -f1-2)"
    echo "Files with issues: $(grep -E '^\.\/' lint.log | wc -l | tr -d ' ')"
    echo "Total errors: $(grep -c ' Error:' lint.log || echo 0)"
    echo "Total warnings: $(grep -c ' Warning:' lint.log || echo 0)"
else
    echo "No recent lint results. Run: pnpm lint"
fi
!echo ""

# Check TypeScript compilation
!echo "📘 TypeScript Status:"
!if command -v tsc &> /dev/null; then
    npx tsc --noEmit --pretty false 2>&1 | head -5 || echo "✅ No TypeScript errors"
else
    echo "TypeScript compiler not found"
fi
!echo ""

# Check for TODO items
!echo "📝 TODO Items:"
!grep -r "TODO\|FIXME\|HACK" --include="*.ts" --include="*.tsx" --include="*.js" --include="*.jsx" src/ 2>/dev/null | wc -l | tr -d ' ' | xargs -I {} echo "{} TODO/FIXME/HACK comments found"

# Check test status
!echo ""
!echo "🧪 Test Status:"
!if [ -d "src/__tests__" ]; then
    echo "Test files: $(find src/__tests__ -name "*.test.*" -o -name "*.spec.*" | wc -l | tr -d ' ')"
else
    echo "No test directory found"
fi